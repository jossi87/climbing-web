{
  "compilerOptions": {
    // Basic options
    "rootDir": "./",
    "module": "ESNext",

    "sourceMap": true,
    "allowJs": true,
    "jsx": "preserve",
    "checkJs": false,

    // we rely on bable for transpiling ts(x) js(x)
    "noEmit": true,

    // Stict type checking
    // "strict": true,
    "noImplicitThis": true,
    // "noImplicitAny": true,
    // "strictNullChecks": true, // will re enable later
    "noUnusedParameters": false,
    // "alwaysStrict": true,

    // Module Resolution
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Error Handling
    "pretty": true,

    //Other
    "skipLibCheck": true,
  },
  "include": [
    "src", "server.js"
  ]
}